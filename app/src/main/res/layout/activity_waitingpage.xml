<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fiberblue"
    tools:context=".Waitingpage">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/fiberhomelogoothreer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:layout_marginTop="20dp"
        android:text="Thank you for choosing fiberHome as your trusted Internet Provider.\n\n We have received your details\n\nKindly wait to be contacted by our Team in the next 12hrs..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/waithomebtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_slogan"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/buttons"
        android:padding="2dp"
        android:text="Go To Home Page"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/exithomebtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/waithomebtn"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/buttons"
        android:padding="2dp"
        android:text="Exit App"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>